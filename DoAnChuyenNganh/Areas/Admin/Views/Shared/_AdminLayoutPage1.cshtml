<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="" name="keywords">
    <meta content="" name="description">
    @RenderSection("css", false);
    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.3/dist/css/lightbox.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        /* Sidebar styles */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 50px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            max-height: 100vh; /* Giới hạn chiều cao sidebar */
        }

        .sidebar-header {
            padding: 15px 20px;
            background-color: #212529;
            color: #f8f9fa;
            font-size: 22px;
            font-weight: bold;
            text-align: center;
        }

        .sidebar-content {
            flex-grow: 1; /* Cho phép vùng này mở rộng để lấp đầy không gian */
            overflow-y: auto; /* Kích hoạt thanh cuộn khi nội dung quá dài */
        }

            .sidebar-content a {
                padding: 12px 20px;
                text-decoration: none;
                font-size: 16px;
                color: #f8f9fa;
                display: block;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .sidebar-content a:hover {
                    background-color: #495057;
                }

                .sidebar-content a.active {
                    background-color: #007bff;
                    color: #fff;
                    font-weight: bold;
                }

        .sidebar-footer {
            background-color: #212529;
            text-align: center;
            padding: 10px;
            color: #f8f9fa;
            font-size: 14px;
        }

        /* Custom Scrollbar Styles */
        /* Chrome, Edge, Safari */
        .sidebar-content::-webkit-scrollbar {
            width: 8px;
        }

        .sidebar-content::-webkit-scrollbar-track {
            background: #343a40;
        }

        .sidebar-content::-webkit-scrollbar-thumb {
            background: #6c757d;
            border-radius: 4px;
        }

            .sidebar-content::-webkit-scrollbar-thumb:hover {
                background: #495057;
            }

        /* Firefox */
        .sidebar-content {
            scrollbar-width: thin;
            scrollbar-color: #6c757d #343a40;
        }

        /* Content area (phần nội dung chính) */
        .content {
            margin-left: 250px;
            padding: 20px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }
    </style>


</head>
@{
    var userName = Context.Request.Cookies["auth"];
    var Role = Context.Request.Cookies["role"];
}
<body>
    @{
        string currentUrl = Request.Path.ToLower();
    }


    <div class="sidebar">
        <div class="sidebar-header">
            <h3>Quản Lý</h3>
        </div>
        <div class="sidebar-content">
            <a href="/Admin/Home/index" class="@(currentUrl == "/admin/home/index" ? "active" : "")">Trang chủ</a>
            <a href="/Admin/Product/index" class="@(currentUrl == "/admin/product/index" ? "active" : "")">Quản Lý Sản Phẩm</a>
            <a href="/Admin/Brand/index" class="@(currentUrl == "/admin/brand/index" ? "active" : "")">Quản Lý Danh Mục</a>
            <a href="/Admin/User/index" class="@(currentUrl == "/admin/user/index" ? "active" : "")">Quản Lý Người Dùng</a>
            <a href="/Admin/Order/index" class="@(currentUrl == "/admin/order/index" ? "active" : "")">Quản Lý Đơn Hàng</a>
            <a href="/Admin/Color/index" class="@(currentUrl == "/admin/color/index" ? "active" : "")">Quản Lý Màu</a>
            <a href="/Admin/Size/index" class="@(currentUrl == "/admin/size/index" ? "active" : "")">Quản Lý Size</a>
            <a href="/Admin/KhuyenMai/index" class="@(currentUrl == "/admin/khuyenmai/index" ? "active" : "")">Quản Lý Khuyến Mãi</a>
            <a href="/Admin/ThongKe/index" class="@(currentUrl == "/admin/thongke/index" ? "active" : "")">Thống Kê</a>
            <a href="/Admin/PhanKhucKhachHang/index" class="@(currentUrl == "/admin/phankhuckhachhang/index" ? "active" : "")">Phân Khúc Khách Hàng</a>
            <a href="/Admin/BackupRestore/index" class="@(currentUrl == "/admin/backuprestore/index" ? "active" : "")">Sao lưu dữ liệu</a>
            <a href="/Admin/BackupRestore/RestoreDatabase" class="@(currentUrl == "/admin/backuprestore/restoredatabase" ? "active" : "")">Phục hồi dữ liệu</a>
        </div>
        <div class="sidebar-footer">
            <p>&copy; 2024 Admin Dashboard</p>
        </div>
    </div>

    <!-- Sidebar End -->
    <!-- Main Content Start -->
    <div class="content">
        <!-- Navbar start (can be minimized or removed) -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <div class="d-flex">
                    <div class="nav-item dropdown">
                        <a href="#" class="my-auto">
                            <i class="fas fa-user fa-2x"></i>
                            <div class="dropdown-menu">
                                @if (Request.Cookies["auth"] != null)
                                {
                                    <a href="@Url.Action("Logout", "User", new { area = "Admin" })" class="dropdown-item">Logout</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "User")" class="dropdown-item">Login</a>
                                    <a href="@Url.Action("Register", "User")" class="dropdown-item">Register</a>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->
        <!-- Render the body of the page -->
        <div>
            @RenderBody()
        </div>
    </div>
    <!-- Main Content End -->
</body>
</html>
