<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="" name="keywords">
    <meta content="" name="description">
    @RenderSection("css", false);
    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.3/dist/css/lightbox.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

</head>
@{
    var userName = Context.Request.Cookies["auth"];
    var Role = Context.Request.Cookies["role"];
}
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3">
                        <i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                        <a href="#" class="text-white">
                            140 Lê Trọng Tấn, TP.Hồ Chí Minh
                        </a>
                    </small>
                    <small class="me-3">
                        <i class="fas fa-envelope me-2 text-secondary"></i>
                        <a href="#" class="text-white">Email@Example.com</a>
                    </small>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a href="/Home" class="navbar-brand"><h1 class="text-primary display-6">Quản Lý</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a href="/Admin/Home/index" class="nav-item nav-link">Trang chủ</a>
                        <a href="/Admin/Product/index" class="nav-item nav-link">Quản Lý Sản Phẩm</a>
                        <a href="/Admin/User/index" class="nav-item nav-link">Quản Lý Người Dùng</a>
                        <a href="/Admin/Order/index" class="nav-item nav-link">Quản Lý Đơn Hàng</a>
                    </div>
                    <div class="d-flex m-3 me-0">
                        <div class="nav-item dropdown">
                            <a href="#" class="my-auto">
                                <i class="fas fa-user fa-2x"></i>
                                <div class="dropdown-menu">
                                    @if (Request.Cookies["auth"] != null)
                                    {
                                        <a href="@Url.Action("Logout", "User", new { area = "Admin" })" class="dropdown-item">Logout</a>

                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Login", "User")" class="dropdown-item">Login</a>
                                        <a href="@Url.Action("Register", "User")" class="dropdown-item">Register</a>
                                    }
                                </div>
                            </a>
                        </div>

                    </div>
                    <div class="col-lg-4 col-6 text-right">
                        @if (userName != null)
                        {
                            <p class="m-0 d-inline">Hello</p>
                            <span class="d-inline">@userName.Value</span>
                        }
                    </div>

            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <div>
        @RenderBody()
    </div>
    <div style="height:100px">@RenderSection("a", false)</div>
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5);">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <h1 class="text-primary mb-0">Admin Dashboard</h1>
                        <p class="text-secondary mb-0">Quản lý hệ thống hiệu quả</p>
                    </div>
                    <div class="col-lg-6">
                        <p class="text-light">Trang tổng quan quản trị viên để theo dõi và quản lý dữ liệu của hệ thống.</p>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fas fa-cogs"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fas fa-user-shield"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fas fa-chart-line"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Tổng Quan</h4>
                        <p class="mb-4">Kiểm tra số liệu thống kê và quản lý các mục quan trọng từ bảng điều khiển.</p>
                        <a href="#" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Truy Cập Dashboard</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Quản Lý Hệ Thống</h4>
                        <a class="btn-link" href="">Quản Lý Người Dùng</a>
                        <a class="btn-link" href="">Cài Đặt Hệ Thống</a>
                        <a class="btn-link" href="">Sao Lưu Dữ Liệu</a>
                        <a class="btn-link" href="">Báo Cáo Hàng Tháng</a>
                        <a class="btn-link" href="">Nhật Ký Hoạt Động</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Tài Khoản Quản Trị</h4>
                        <a class="btn-link" href="">Hồ Sơ Của Tôi</a>
                        <a class="btn-link" href="">Thay Đổi Mật Khẩu</a>
                        <a class="btn-link" href="">Cài Đặt Bảo Mật</a>
                        <a class="btn-link" href="">Quản Lý Phiên Làm Việc</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Liên Hệ Hỗ Trợ</h4>
                        <p>Email: admin-support@example.com</p>
                        <p>Điện Thoại: +0123 4567 8910</p>
                        <p>Trung tâm hỗ trợ</p>
                        <img src="img/support.png" class="img-fluid" alt="Trung Tâm Hỗ Trợ">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright bg-dark py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Nhóm L</a>,okokokok</span>
                </div>
                <div class="col-md-6 my-auto text-center text-md-end text-white">
                    <!--/*** This template is free as long as you keep the below author’s credit link/attribution link/backlink. ***/-->
                    <!--/*** If you'd like to use the template without the below author’s credit link/attribution link/backlink, ***/-->
                    <!--/*** you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". ***/-->
                    Tạo bởi <a class="border-bottom" href="https://htmlcodex.com">okokokok</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- jQuery (Chọn phiên bản 3.6.4 mới nhất) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <!-- Bootstrap JS (Chọn phiên bản 5.x tương ứng với CSS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

</body>
</html>
