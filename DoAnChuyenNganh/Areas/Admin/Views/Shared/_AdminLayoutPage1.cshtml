<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="" name="keywords">
    <meta content="" name="description">
    @RenderSection("css", false);
    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.3/dist/css/lightbox.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        /* Sidebar styles */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 50px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            max-height: 100vh; /* Giới hạn chiều cao sidebar */
        }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: #f8f9fa;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #575d63;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .sidebar-header {
            padding: 10px 25px;
            background-color: #212529;
            color: white;
            font-size: 22px;
        }

        /* Make the main content area scrollable */
        .sidebar-content {
            flex-grow: 1; /* Makes this area flexible and fill available space */
            overflow-y: auto; /* Allows scrolling if content overflows */
        }

        .sidebar-footer {
            margin-top: auto; /* Push footer to the bottom */
            background-color: #212529;
            text-align: center;
            padding: 10px;
            color: white;
        }

        /* Custom Scrollbar Styles */
        /* For Webkit browsers like Chrome, Safari */
        .sidebar-content::-webkit-scrollbar {
            width: 8px; /* Width of the scrollbar */
        }

        .sidebar-content::-webkit-scrollbar-track {
            background: #f1f1f1; /* Background color of the track */
            border-radius: 10px; /* Round corners of the track */
        }

        .sidebar-content::-webkit-scrollbar-thumb {
            background: #888; /* Color of the scrollbar thumb */
            border-radius: 10px; /* Round corners of the thumb */
            border: 2px solid #f1f1f1; /* Border around the thumb */
        }

            .sidebar-content::-webkit-scrollbar-thumb:hover {
                background: #555; /* Color of the thumb when hovered */
            }

        /* For Firefox */
        .sidebar-content {
            scrollbar-width: thin; /* Thin scrollbar */
            scrollbar-color: #888 #f1f1f1; /* Thumb color and track color */
        }
    </style>

</head>
@{
    var userName = Context.Request.Cookies["auth"];
    var Role = Context.Request.Cookies["role"];
}
<body>
    

    <div class="sidebar">
        <div class="sidebar-header">
            <h3>Quản Lý</h3>
        </div>
        <div class="sidebar-content">
            <a href="/Admin/Home/index">Trang chủ</a>
            <a href="/Admin/Product/index">Quản Lý Sản Phẩm</a>
            <a href="/Admin/Brand/index">Quản Lý Danh Mục</a>
            <a href="/Admin/User/index">Quản Lý Người Dùng</a>
            <a href="/Admin/Order/index">Quản Lý Đơn Hàng</a>
            <a href="/Admin/Color/index">Quản Lý Màu</a>
            <a href="/Admin/Size/index">Quản Lý Size</a>
            <a href="/Admin/KhuyenMai/index">Quản Lý Khuyến Mãi</a>
            <a href="/Admin/ThongKe/index">Thống Kê</a>
            <a href="/Admin/PhanKhucKhachHang/index">Phân Khúc Khách Hàng</a>
        </div>
        <div class="sidebar-footer">
            <p>&copy; 2024 Admin Dashboard</p>
        </div>
    </div>
    <!-- Sidebar End -->
    <!-- Main Content Start -->
    <div class="content">
        <!-- Navbar start (can be minimized or removed) -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <div class="d-flex">
                    <div class="nav-item dropdown">
                        <a href="#" class="my-auto">
                            <i class="fas fa-user fa-2x"></i>
                            <div class="dropdown-menu">
                                @if (Request.Cookies["auth"] != null)
                                {
                                    <a href="@Url.Action("Logout", "User", new { area = "Admin" })" class="dropdown-item">Logout</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "User")" class="dropdown-item">Login</a>
                                    <a href="@Url.Action("Register", "User")" class="dropdown-item">Register</a>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->
        <!-- Render the body of the page -->
        <div>
            @RenderBody()
        </div>
    </div>
    <!-- Main Content End -->
</body>
</html>
